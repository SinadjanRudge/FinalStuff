<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manage_items.ManageItemsFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToAddItem"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="56dp"
        android:background="#4CAF50"
        android:text="Add \nItem\n\n+"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/goToDeleteItem"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToDeleteItem"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="208dp"
        android:background="#FF0202"
        android:text="-\n\nDelete\n Item"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>